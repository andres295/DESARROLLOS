@model IEnumerable<Sistema_TiendaBBB.Models.TbVenta>

<h2>Listado de Ventas</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Venta</th>
            <th>Artículo</th>
            <th>Cliente</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
            <th>Total</th>
            <th>Fecha Registro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.IdVenta</td>
                <td>@venta.IdArticuloNavigation?.DescripcionArticulo</td> <!-- Nombre del artículo -->
                <td>@venta.IdClienteNavigation?.NombreCliente</td> <!-- Nombre del cliente -->
                <td>@venta.Cantidad</td>
                <td>@venta.PrecioUnitario</td>
                <td>@venta.Subtotal</td>
                <td>@venta.Total</td>
                <td>@venta.FechaRegistro?.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

