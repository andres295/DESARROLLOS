@model List<TbCatPai>

<h1>País</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Agregar País</a>
</p>

<!-- Tabla de Pais -->
<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered">
        <thead class="table-primary">
            <tr>

                <th>País</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tbCatPais in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => tbCatPais.DescripcionPais)</td>
                    <td>
                        <!-- Botones para editar y eliminar -->
                        <a asp-action="Edit" asp-route-id="@tbCatPais.IdPais" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@tbCatPais.IdPais" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>