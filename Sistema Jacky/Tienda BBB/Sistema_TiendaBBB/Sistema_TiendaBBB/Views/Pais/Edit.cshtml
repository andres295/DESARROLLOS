@using Sistema_TiendaBBB.Models.ViewModels
@model PaisViewModel

<h1>Actualizar País</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Cambia el asp-action a "Edit" -->
        <form asp-action="Edit" method="post">
            <!-- Campo oculto para el ID del artículo -->
            <input type="hidden" asp-for="IdPais" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescripcionPais" class="control-label"></label>
                <input asp-for="DescripcionPais" class="form-control" />
                <span asp-validation-for="DescripcionPais" class="text-danger"></span>
            </div>
            <!-- Guardar Registro -->
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
