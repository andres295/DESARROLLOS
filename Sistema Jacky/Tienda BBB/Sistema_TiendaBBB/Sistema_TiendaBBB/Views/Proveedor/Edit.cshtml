@using Sistema_TiendaBBB.Models.ViewModels
@model ProveedorViewModel

<h1>Actualizar Proveedor</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Cambia el asp-action a "Edit" -->
        <form asp-action="Edit" method="post">
            <!-- Campo oculto para el ID del proveedor -->
            <input type="hidden" asp-for="IdProveedor" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreProveedor" class="control-label"></label>
                <input asp-for="NombreProveedor" class="form-control" />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="IdClasificacion" class="control-label"></label>
                <select asp-for="IdClasificacion" class="form-control" asp-items="ViewBag.Clasificacion"></select>
                <span asp-validation-for="IdClasificacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdPago" class="control-label"></label>
                <select asp-for="IdPago" class="form-control" asp-items="ViewBag.Pago"></select>
                <span asp-validation-for="IdPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdIdentificacion" class="control-label"></label>
                <select asp-for="IdIdentificacion" class="form-control" asp-items="ViewBag.Identificación"></select>
                <span asp-validation-for="IdIdentificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPais" class="control-label"></label>
                <select asp-for="IdPais" class="form-control" asp-items="ViewBag.Pais"></select>
                <span asp-validation-for="IdPais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCiudad" class="control-label"></label>
                <select asp-for="IdCiudad" class="form-control" asp-items="ViewBag.Ciudad"></select>
                <span asp-validation-for="IdCiudad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroIdentificacion" class="control-label"></label>
                <input asp-for="NumeroIdentificacion" class="form-control" />
                <span asp-validation-for="NumeroIdentificacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
