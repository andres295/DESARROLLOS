@using Sistema_TiendaBBB.Models.ViewModels
@model ClasificacionViewModel

<h1>Agregar Clasificación</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DescripcionClasificacion" class="control-label"></label>
                <input asp-for="DescripcionClasificacion" class="form-control" />
                <span asp-validation-for="DescripcionClasificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

